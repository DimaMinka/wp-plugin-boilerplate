root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[{*.js,*.xml,*.json,.stylelintrc,.eslintrc}]
indent_size = 2
indent_style = space

[*.php]
indent_size = 4
indent_style = tab

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
